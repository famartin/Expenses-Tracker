<html>
<head>
	<%- include('head') %>
</head>
<body>
	<div class="wrapper">
		<%- include('nav'); %>
		<div class="container" id="content">
			<%- include('nav-button') %>
			<br>
			<div class="jumbotron jumbotron-fluid">
				<div class="container">
					<h2 style="text-align:center;">Balance: $<%= balance[0].total.toFixed(2) %></h2>
					<h5 style="text-align:center;"><%= username %></h5>
				</div>
			</div>
			<div id="accordion">
  				<div class="card">
    				<div class="card-header" id="headingOne">
      					<h5 class="mb-0">
        					<button style="text-decoration:none;color:black;display:block;margin:0 auto;" class="btn btn-link" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
          						Add Expense
        					</button>
      					</h5>
    				</div>

    				<div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#accordion">
      					<div class="card-body">
							<form action="/add-expense" method="POST">
								<div class="form-group">
									<input class="form-control" type="text" name="balanceId" readonly value="<%= balance[0]._id %>"><br>
									<input class="form-control" type="text" name="name" placeholder="Expense Name"><br>
									<div class="input-group mb-3">
										<div class="input-group-prepend">
    										<span class="input-group-text">$</span>
  										</div>
										<input class="form-control" type="number" name="amount" placeholder="Amount" step="any" min="0" onchange="setTwoNumberDecimal">
									</div>
									<div class="form-group">
										<label>Category</label>
										<select multiple class="form-control" name="category">
  											<option value="food">Food</option>
  											<option value="gas">Gas</option>
  											<option value="bill">Bill</option>
  											<option value="fun">Fun</option>
										</select>
									</div>
								</div>
								<button type="submit" class="btn btn-primary">Submit</button>
							</form>
      					</div>
    				</div>
  				</div>
  				<div class="card">
    				<div class="card-header" id="headingTwo">
      					<h5 class="mb-0">
        					<button style="text-decoration:none;color:black;display:block;margin:0 auto;" class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
          						Add to Balance
        					</button>
      					</h5>
    				</div>
    				<div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordion">
      					<div class="card-body">
							<form action="/deposit" method="POST">
								<div class="form-group">
									<input class="form-control" type="text" name="balanceId" readonly value="<%= balance[0]._id %>"><br>
									<textarea class="form-control" rows="3" name="description" placeholder="Short description [30 character max]"></textarea><br>
									<div class="input-group mb-3">
										<div class="input-group-prepend">
											<span class="input-group-text">$</span>
										</div>
										<input class="form-control" type="number" name="amount" placeholder="Amount" step="any" min="0" onchange="setTwoNumberDecimal">
									</div>
									<button class="btn btn-primary" type="submit">Submit</button>
								</div>
							</form>
      					</div>
    				</div>
  				</div>
			</div>
		</div>
	</div>
	<%- include('js-scripts') %>
</body>
</html>
