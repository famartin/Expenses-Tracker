<html>
<head>
<%- include('head') %>
</head>
<body>
	<div class="wrapper">
	<%- include('nav'); %>
	<div class="container" id="content">
	<%- include('nav-button') %>
	<br>
	<h4>Balance: $<%= balance[0].total.toFixed(2) %></h4>
	<button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#addExpenseForm" aria-expanded="false" aria-controls="collapseExample">Add Expense</button>
<div class="collapse" id="addExpenseForm">
  <div class="card card-body">
	<form action="/add-expense" method="POST">
		<div class="form-group">
		<input class="form-control" type="text" name="balanceId" readonly value="<%= balance[0]._id %>"><br>
		<input class="form-control" type="text" name="name" placeholder="Expense Name"><br>
		<div class="input-group mb-3">
		<div class="input-group-prepend">
    		<span class="input-group-text">$</span>
  		</div>
		<input class="form-control" type="number" name="amount" placeholder="Amount" step="any" min="0" onchange="setTwoNumberDecimal">
		</div>
		<div class="form-group">
		<label>Category</label>
		<select multiple class="form-control" name="category">
  			<option value="food">Food</option>
  			<option value="gas">Gas</option>
  			<option value="bill">Bill</option>
  			<option value="fun">Fun</option>
		</select>
		</div>
		</div>
		<button type="submit" class="btn btn-primary">Submit</button>
	</form>
</div>
</div>
	<br>
	<br>
	<button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#addDepositForm" aria-expanded="false" aria-controls="collapseExample">Add to Balance</button>
	<div class="collapse" id="addDepositForm">
  	<div class="card card-body">
	<form action="/deposit" method="POST">
		<div class="form-group">
		<input class="form-control" type="text" name="balanceId" readonly value="<%= balance[0]._id %>"><br>
		<textarea class="form-control" rows="3" name="description" placeholder="Short description [30 character max]"></textarea><br>
		<div class="input-group mb-3">
		<div class="input-group-prepend">
			<span class="input-group-text">$</span>
		</div>
		<input class="form-control" type="number" name="amount" placeholder="Amount" step="any" min="0" onchange="setTwoNumberDecimal">
		</div>
		<button class="btn btn-primary" type="submit">Submit</button>
	</form>
	</div>
	</div>
	</div>
	</div>
	<%- include('js-scripts') %>
</body>
</html>
