<html>
<head>
</head>
<body>
	<p>Balance: $<%= balance[0].total %></p>
	<h3>Add Expense</h3>
	<form action="/add-expense" method="POST">
		<input type="text" name="total" readonly value="<%= balance[0].total %>"><br>
		<input type="text" name="balanceId" readonly value="<%= balance[0]._id %>"><br>
		<input type="text" name="name" placeholder="Expense Name"><br>
		<input type="number" name="amount" placeholder="Amount"><br>
		<select name="category">
			<option value="" selected disabled hidden>Category</option>
  			<option value="food">Food</option>
  			<option value="gas">Gas</option>
  			<option value="bill">Bill</option>
  			<option value="fun">Fun</option>
		</select><br>
		<button type="submit">Submit</button>
	</form>
</body>
</html>
