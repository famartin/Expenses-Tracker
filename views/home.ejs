<html>
<head>
<%- include('head') %>
</head>
<body>
	<div class="wrapper">
	<%- include('nav'); %>
	<div class="container" id="content">
	<%- include('nav-button') %>
	<h4>Balance: $<%= balance[0].total.toFixed(2) %></h4>
	<h4>Add Expense</h4>
	<form action="/add-expense" method="POST">
		<div class="form-group">
		<input class="form-control" type="text" name="balanceId" readonly value="<%= balance[0]._id %>">
		<input class="form-control" type="text" name="name" placeholder="Expense Name">
		<div class="input-group mb-3">
		<div class="input-group-prepend">
    		<span class="input-group-text">$</span>
  		</div>
		<input class="form-control" type="number" name="amount" placeholder="Amount" step="any" min="0" onchange="setTwoNumberDecimal">
		</div>
		<div class="form-group">
		<label>Category</label>
		<select multiple class="form-control" name="category">
  			<option value="food">Food</option>
  			<option value="gas">Gas</option>
  			<option value="bill">Bill</option>
  			<option value="fun">Fun</option>
		</select>
		</div>
		</div>
		<button type="submit" class="btn btn-primary">Submit</button>
	</form>
	<br>
	<h4>Add to Balance</h4>
	<form action="/deposit" method="POST">
		<input type="text" name="balanceId" readonly value="<%= balance[0]._id %>"><br>
		<textarea rows="3" name="description" placeholder="Short description [30 character max]"></textarea><br>
		<input type="number" name="amount" placeholder="Amount" step="any" min="0" onchange="setTwoNumberDecimal"><br>
		<button type="submit">Submit</button>
	</form>
	</div>
	</div>
	<%- include('js-scripts') %>
</body>
</html>
